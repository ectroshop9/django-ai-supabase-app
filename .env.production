# Production Environment Variables
# =================================
# Django
DEBUG=False
SECRET_KEY=change-this-in-fly-secrets
ALLOWED_HOSTS=django-ai-supabase.fly.dev,localhost

# Database (Supabase)
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST].supabase.co:5432/postgres

# Cloudflare R2 (Optional - enable later)
USE_R2=True
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=django-ai-supabase
R2_ENDPOINT_URL=https://[ACCOUNT-ID].r2.cloudflarestorage.com

# Upstash Redis (Optional - enable later)
UPSTASH_REDIS_URL=redis://default:[PASSWORD]@[HOST].upstash.io:6379

# Fly.io
FLY_APP_NAME=django-ai-supabase
PORT=8080
